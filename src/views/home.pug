doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Zoom Clone
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body 
        header
            h1 Clon-oom!

        main
            div#welcome
                form
                    input(required, placeholder="room name" type="text")
                    button Enter Room
            div#room 
                h3
                ul 
                form#name
                    input(required, placeholder="nickname" type="text")
                    button Save 
                form#msg
                    input(required, placeholder="message" type="text")
                    button Send 
        script(src="/socket.io/socket.io.js")     
        script(src="/public/js/app.js") 